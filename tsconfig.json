{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "paths": {
      "@common/*": ["./common/*"]
    },
    "resolveJsonModule": true,
    "target": "es2017"
  },
  "exclude": ["coverage", "dist", "node_modules"]
}
